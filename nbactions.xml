<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>clean</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>build-with-dependencies</actionName>
            <basedir>../</basedir>
            <reactor>also-make</reactor>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>test</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>test.single</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
            <properties>
                <test>${className}</test>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>run.single.main</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
            <properties>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <exec.args>-classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>debug.single.main</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
            <properties>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <jpda.listen>true</jpda.listen>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <forkMode>once</forkMode>
                <test>${className}</test>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
        <action>
            <actionName>javadoc</actionName>
            <goals>
                <goal>help:all-profiles</goal>
            </goals>
        </action>
    </actions>
